{
  "version": 2,
  "outputDirectory": "frontend",
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "backend/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "frontend/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}